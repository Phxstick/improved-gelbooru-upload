{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],

    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": "./src",

    "strict": true,
    "forceConsistentCasingInFileNames": true,

    "noEmit": false,
    "skipLibCheck": true,
    "allowJs": false,
    "checkJs": false,

    "isolatedModules": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*.ts"]
}
